extends ./layout
block content
  .ui.inverted.menu
    .header.item !{titulo}
    .active.item Link
    a.item Link {{hola}}
    .ui.dropdown.item(tabindex='0')
      | Dropdown
      i.dropdown.icon
      .menu(tabindex='-1')
        .item Action
        .item Another Action
        .item Something else here
        .divider
        .item Separated Link
        .divider
        .item One more separated link
    .right.menu
      .item
        .ui.transparent.inverted.icon.input
          i.search.icon
          input(placeholder='Search', type='text')
      a.item Link

  .ui.three.column.row.stackable.grid
    .ten.wide.column
      .ui.segment
        .column

    .six.wide.column
      .ui.segment
        .ui.top.attached.label  Conectar con arduino
        .ui.grid
          .fourten.wide.column
            .ui.action
              .ui.dropdown.selection(tabindex='0')
                i.dropdown.icon
                .default.text Listado de Arduino
                .menu.transition.hidden(tabindex='-1')
                  .item(ng-repeat='usb in port' ng-click='setUSB(usb.comName)' data-value='{{usb.comName}}') {{usb.manufacturer}}
              button.ui.teal.icon.button(ng-click='updateUSB()')
                i.repeat.icon
          .two.wide.column
            button.ui.red.basic.button(ng-click='moverOrigen()') [0,0,0]

      .ui.segment.column
        //.ui.top.attached.label Control manual
        label Control manual
          .ui.action
            .ui.action.input
              input(placeholder='Enviar comando.',ng-model='comando', type='text')
              button.ui.blue.button(ng-click='enviarDatos(comando)') Enviar
