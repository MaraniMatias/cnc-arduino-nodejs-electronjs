extends ./layout
block content
  .ui.inverted.menu
    .header.item !{titulo}
    .active.item Link
    a.item Link {{hola}}
    .ui.dropdown.item(tabindex='0')
      | Dropdown
      i.dropdown.icon
      .menu(tabindex='-1')
        .item Action
        .item Another Action
        .item Something else here
        .divider
        .item Separated Link
        .divider
        .item One more separated link
    .right.menu
      .item
        .ui.transparent.inverted.icon.input
          i.search.icon
          input(placeholder='Search', type='text')
      a.item Link

  .ui.three.column.row.stackable.grid
    .three.wide.column
      .ui.segment
        .ui.top.attached.label  Conectar con arduino
        .ui.grid
          .row
            .column
              label Listado de Arduino
                .ui.fluid.dropdown.selection(tabindex='0')
                  i.dropdown.icon
                  .default.text Ninguno
                  .menu.transition.hidden(tabindex='-1')
                    .item(ng-click='setUSB()' data-value='') Ninguno
                    .item(ng-repeat='usb in port' ng-click='setUSB(usb.comName)' data-value='{{usb.comName}}') {{usb.manufacturer}}

          .row
            .column.center.aligned
              button.ui.green.basic.button Abrrir
              button.ui.basic.button Cerrar

    .ten.wide.column
      .ui.segment
        .column
          a
            {{usb.comName}}
            {{usb.manufacturer}}
            {{usb.serialNumber}}

    .three.wide.column
      .ui.segment.form
          .two.fields
            .field
              label First name
              input(placeholder='First Name', type='text')
            .field
              label Segundo Nombre
              input(placeholder='Segundo Nombre', type='text')
